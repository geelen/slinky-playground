<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>slinky</servlet-name>
        <servlet-class>scalaz.http.servlet.StreamStreamServlet</servlet-class>
        <init-param>
          <param-name>application</param-name>
          <param-value>wd.App</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>slinky</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    
    <security-constraint>
      <web-resource-collection>
        <url-pattern>/admin/*</url-pattern>
      </web-resource-collection>
      <auth-constraint>
        <role-name>admin</role-name>
      </auth-constraint>
    </security-constraint>
</web-app>
